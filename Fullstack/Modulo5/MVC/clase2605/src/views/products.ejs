«<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: products[i].name}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
							<a href="/products/detail/¿?">
								<figure class="product-box_image">
									<img src="/images/products/<%= products[i].image %>" alt="imagen de producto">
								</figure>
								<article class="product-box_data">
									<h2><%= products[i].price %></h2>
									<span><%= products[i].discount %></span>
									<p><%= products[i].name %></p>
									<i class="fas fa-truck"></i>
								</article>
							</a>
					</section>
				</div>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>